<%= form_with(model: @users,
              url: sessions_path(@users),
              method: :post,
              class: "flex flex-col gap-6") do |form| %>
  <%= tag.div(class: "flex flex-col text-sm") do %>
    <%= form.label :name, "Email", class: "font-semibold" %>
    <%= form.text_field :email, required: true, class: "border border-gray-600 rounded-md p-2" %>
  <% end %>
  <%= tag.div(class: "flex flex-col text-sm") do %>
    <%= form.label :password, "Password", class: "font-semibold" %>
    <%= form.password_field :password, required: true, class: "border border-gray-600 rounded-md p-2" %>
  <% end %>
  <%= tag.div(clas: "flex gap-2 items-center") do %>
    <%= link_to("Sing up", new_user_path(@users), class: "p-4 rounded-md shadow-md") %>
    <%= button_tag("Log in", class: "p-3.5 rounded-md shadow-md") %>
  <% end %>
<% end %>
